<?xml version="1.0" encoding="utf-8"?>
<com.example.picker_selector_app.wigets.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvGifIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#4D000000"
        android:paddingHorizontal="@dimen/dp16"
        android:paddingVertical="@dimen/dp4"
        android:text="@string/gifLabel"
        android:textColor="@color/white"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSelectedIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="2dp"
        android:background="@drawable/image_picker_indicator_bg"
        android:scaleType="centerInside"
        android:src="@drawable/ic_image_picker_selected" />

    <TextView
        android:id="@+id/tvSelectedNumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="2dp"
        android:background="@drawable/image_picker_indicator_bg"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="99"
        tools:visibility="gone" />

</com.example.picker_selector_app.wigets.SquareFrameLayout>